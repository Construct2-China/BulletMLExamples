<?xml version="1.0" ?>
<!DOCTYPE bulletml SYSTEM "bulletml.dtd">

<bulletml type="vertical"
          xmlns="http://www.asahi-net.or.jp/~cs8k-cyu/bulletml">

	<action label="top">
		<repeat>
			<times>10 * $rank</times>
			<action label="circle">
				<repeat>
					<times>4+$rank*36</times>
					<action>
						<fire>
							<direction type="sequence">360/(4+$rank*36-1)</direction>
							<speed>1</speed>
							<bullet>
								
							</bullet>
						</fire>
					</action>
				</repeat>
				<wait>100 * $rank</wait>
			</action>
		</repeat>
	</action>
	
